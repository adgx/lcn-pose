    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Training",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--data-type",
                "scale",
                "--mode",
                "gt",
                "--filename",
                "mpii"
            ]
        },
        {
            "name": "Python Debugger: Inference",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--data-type",
                "scale",
                "--mode",
                "gt",
                "--filename",
                "humansc3d",
                //"humansc3d",
                "--test-indices",
                "1",
                "--checkpoint",
                "best"
            ]
        },
        {
            "name": "Python Debugger: Evaluate",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--data-type",
                "scale",
                "--mode",
                "gt",
                "--filename",
                "humansc3d",
                //"humansc3d",
                "--test-indices",
                "1",
                "--per-joint",
            ]
        }
    ]
}